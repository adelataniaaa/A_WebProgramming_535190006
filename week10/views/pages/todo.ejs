<h1>To-Do List</h1>
<div class="card">
    <div class="card-body">
        <form action="/todo/add" method="post">
            <div class="form-group">
                <label for="taskName">Add a new task</label>
                <input type="text" class="form-control" name="taskName" required>
            </div>
            <input type="submit" class="btn btn-primary" name="submit" value="Save">
        </form>
    </div>
</div>

<br>

<table class="table">
    <thread>
        <tr>
            <th>#</th>
            <th>Task Name</th>
            <th></th>
        </tr>
    </thread>
    <body>
        <% if(!locals.tasks || tasks.length == 0) { %>
        <tr><td colspan="3" class="text-center" %><i>No tasks!</i></td></tr>
        <% } else { %>
        <% tasks.forEach((task, index) => { %>
            <tr>
                <td> <%= index + 1 %></td>
                <td> <%= task.name %></td>
                <td>
                    <form action="/todo/done/<%= task._id %>" method="post">
                        <button type="submit" class="btn btn-outline-success btn-sm">
                            <i data-feather="check"></i>
                            Done
                        </button>
                    </form>
                        
                
                </td>
            </tr>
            <% }) %>
            <% } %>
    </body>
</table>

<script src="https://unpkg.com/feather-icons"></script>
<script>feather.replace()</script>

<%- contentFor('title') %>
To-Do List